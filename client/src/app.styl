@import './reset.styl';

body
  size: 100vw 100vh
  color: #fff
  background-color: #00BCD4

#root, .app
  size: 100%
  display: flex
  justify-content: center
  align-items: center

.button
  padding: .75rem
  margin-right: 1rem
  font-size: 1.25rem
  font-weight: bold
  border-radius: 4px
  background-color: #4CAF50
  &:hover
    background-color: #43a047
  &:active
    background-color: #388e3c

.button--danger
  background-color: #FF9800
  &:hover
    background-color: #fb8c00
  &:active
    background-color: #f57c00

.strong-line
  margin: 1rem auto
  font-size: 1.25rem
  font-weight: bold
